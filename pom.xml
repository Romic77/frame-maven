        </plugins>


        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>conf/**</exclude>
                </excludes>
            </resource>
            <!-- mvn -P test 打包测试的profile.active -->
            <resource>
                <directory>src/main/resources/conf/${profile.active}</directory>
            </resource>
        </resources>

    </build>
